<div class="row align-items-baseline">
  <div class="col-12 col-md-10">
    <h1 class='mb-3'>Tasks</h1>
  </div>
  <div class="col-12 col-md-2 text-end">
    <%= link_to 'New', new_task_path, class: 'text-success' %>
  </div>
</div>
<% @tasks.each do |task| %>
  <div class='mb-3'>
    <div class='row border-top border-1 pt-2'>
      <div class='col-12 col-md-8'>
        <h2><%= link_to task.name, task %></h2>
        <% if task.description.present? %>
          <p><%= task.description %></p>
        <% else %>
          <p>No description yet</p>
        <% end %>
        <div class='mb-2'>
          <%= link_to 'Edit', edit_task_path(task)%>
          <%= link_to 'Delete', task_path(task), class: 'text-danger ms-2', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
      <div class='col-12 col-md-4'>
        <p class='mt-3 mb-1'>Completed: <%= task.completed %></p>
        <p class='mb-1'>Status: <%= task.status %></p>
        <p class='mb-1'>Creator: <%= task.creator %></p>
        <p class='mb-1'>Performer: <%= task.performer %></p>
      </div>
    </div>
  </div>
<% end %>
